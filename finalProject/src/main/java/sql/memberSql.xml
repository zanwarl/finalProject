<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="korea.member">
	<insert id="memberInsert" parameterType="korea.member.model.MemberDTO">
	insert into member values(member_idx.nextval,#{member_id},#{member_pwd},#{member_name},#{member_sex, jdbcType=VARCHAR},#{member_birth},#{member_tel},#{member_email},#{member_addr},0,sysdate)
	</insert>
	<select id="memberSelect" resultType="String" parameterType="String">
	select member_id from member where member_id = #{userid, jdbcType=VARCHAR}
	</select>
	
	<select id="getUserEmail" parameterType="int" resultType="String">
	select member_email from member where member_idx = #{memIdx}
	</select>
	
	<select id="memberloginSql" resultType="String" parameterType="String">
   select member_pwd from member where member_id= #{member_id, jdbcType=VARCHAR}
   </select>
   
   <select id="memberInfo"  parameterType="String" resultType="korea.member.model.MemberDTO">
   	select * from member where member_id = #{member_id}
   </select>

<!--    <select id="getUserInfoSql" parameterType="int" resultType="korea.member.model.MemberDTO">
   		select * from member where member_idx = #{memberIdx}
   
   </select> -->
   <update id="memberUpdate" parameterType="korea.member.model.MemberDTO">
	update member set member_pwd=#{member_pwd}, member_tel=#{member_tel}, member_email=#{member_email}, member_addr=#{member_addr} where member_id=#{member_id}
	</update>
   
</mapper>